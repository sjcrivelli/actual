{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "module": "commonjs",
    "target": "ES2020",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": false,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "."
  },
  "include": [
    "src",
    "index.ts",
    "preload.ts",
    "menu.ts",
    "server.ts",
    "window-state.ts"
  ],
  "exclude": ["../../packages/types/dist"]
}
