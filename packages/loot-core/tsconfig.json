{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
  "baseUrl": "./",
    "rootDir": "src",
    "outDir": "dist-types",
    "composite": true,
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "types": [],
    "paths": {
      "loot-core/*": ["packages/loot-core/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "dist-types"]
}
