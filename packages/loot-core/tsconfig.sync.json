{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "baseUrl": "./src",
    "rootDir": "src",
    "noEmit": true,
    "strict": false,
    "strictFunctionTypes": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": false,
    "outDir": "build/sync",
    "paths": {
      "*": ["./*"]
    },
    "allowJs": true,
    "types": ["node"]
  },
  "include": [
    "src/server/**/*.ts",
    "src/server/sync/**/*.ts",
    "src/shared/**/*.ts",
    "src/types/**/*.ts",
    "src/**/*.tsx",
    "src/platform/**/*.ts",
    "src/platform/**/*.tsx"
  ],
  "exclude": [
    "**/__tests__/*",
    "**/__snapshots__/*",
    "node_modules",
    "dist",
    "lib-dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__/**"
  ]
}
