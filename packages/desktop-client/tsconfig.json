{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./lib-dist",
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "types": [
      "vite/client",
      "vitest/globals"
    ],
    "paths": {
      "@desktop-client/*": [
        "src/*"
      ],
      "@loot-core/*": [
        "../loot-core/src/*"
      ],
      "@/*": [
        "src/*"
      ],
      "loot-core/*": [
        "../loot-core/lib-dist/browser/*"
      ],
      "@actual-app/types/*": [
        "../types/*"
      ],
      "loot-core/types/models": [
        "src/type-shims/loot-core/types/models.d.ts"
      ],
      "loot-core/types/prefs": [
        "src/type-shims/loot-core/types/prefs.d.ts"
      ],
      "loot-core/types/api-handlers": [
        "src/type-shims/loot-core/types/api-handlers.d.ts"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "../loot-core/**",
    "../sync-server/**",
    "../crdt/**",
    "**/node_modules/**",
    "src/**/*.test.*",
    "src/**/*.spec.*",
    "../loot-core/src/**/*"
  ]
}