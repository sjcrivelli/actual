{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "Node16",
    "moduleResolution": "Node16",
    "lib": ["ES2021", "DOM"],
    "noEmit": false,
    "outDir": "dist",
  "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "coverage"
  ]
}