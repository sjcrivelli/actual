{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "Node16",
    "moduleResolution": "Node16",
    "lib": [
      "ES2021",
      "DOM"
    ],
    "noEmit": false,
    "outDir": "build",
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "coverage"
  ]
}