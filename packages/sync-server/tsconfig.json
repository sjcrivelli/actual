{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": "src",
    "outDir": "lib-dist",
    "declaration": true,
    "emitDeclarationOnly": false,
    "noEmit": false,
    "module": "esnext",
    "target": "ES2020",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "../../",
    "paths": {
      "@loot-core/*": ["packages/loot-core/src/*"],
      "@desktop-client/*": ["packages/desktop-client/src/*"],
      "@actual-app/types/*": ["packages/types/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib-dist", "coverage"],
  "references": [
    { "path": "../types" }
  ]
}
