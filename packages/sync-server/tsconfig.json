{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "Node16",
    "moduleResolution": "Node16",
    "target": "ES2021",
    "lib": ["ES2021", "DOM"],
    "outDir": "build",
    "rootDir": "src",
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noEmit": false
  },
  "include": ["src/**/*", "src/app.ts"],
  "exclude": ["node_modules", "build", "coverage"]
}
