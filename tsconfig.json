{
  "files": [],
  "references": [
    { "path": "packages/sync-server" },
    { "path": "packages/loot-core" },
    { "path": "packages/desktop-client" },
    { "path": "packages/types" }
  ],
  "compilerOptions": {
    "baseUrl": ".", // Ensures non-relative paths work with "paths"
    "paths": {
      "@loot-core/*": ["./packages/loot-core/src/*"],
      "@desktop-client/*": ["./packages/desktop-client/src/*"]
    },
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2020",
    "lib": ["DOM", "ES2020"]
  }
}